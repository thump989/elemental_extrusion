{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "thump989:giant_clam",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "properties": {
        "thump989:giant_clam_closed": {
          "client_sync": true,
          "default": false,
          "type": "bool"
        }
      }
    },
    "components": {
      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "cause": "lava",
            "damage_per_tick": 8,
            "filters": [
              {
                "test": "in_lava",
                "subject": "self"
              }
            ]
          }
        ]
      },
      "minecraft:experience_reward": {
        "on_death": "q.last_hit_by_player ? 5 : 0"
      },
      "minecraft:type_family": {
        "family": ["mob", "giant_clam"]
      },
      "minecraft:loot": {
        "table": "loot_tables/entity/giant_clam_pearl.json"
      },
      "minecraft:pushable": {
        "is_pushable": false
      },
      "minecraft:knockback_resistance": {
        "value": 1,
        "max": 1
      },
      "minecraft:health": {
        "value": 150,
        "max": 150
      },
      "minecraft:push_through": {
        "value": 1
      },
      "minecraft:collision_box": {
        "height": 1,
        "width": 1
      },
      "minecraft:is_collidable": {}
    },
    "component_groups": {
      "self:close": {
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "on_damage": {
                "filters": [
                  {
                    "none_of": [
                      {
                        "test": "has_damage",
                        "subject": "self",
                        "value": "fire"
                      },
                      {
                        "test": "has_damage",
                        "subject": "self",
                        "value": "fire_tick"
                      },
                      {
                        "test": "has_damage",
                        "subject": "self",
                        "value": "lava"
                      },
                      {
                        "test": "has_damage",
                        "subject": "self",
                        "value": "magic"
                      }
                    ]
                  }
                ]
              },
              "damage_multiplier": 0.1
            }
          ]
        },
        "minecraft:spell_effects": {
          "add_effects": [
            {
              "amplifier": 1,
              "duration": 9999,
              "effect": "regeneration",
              "visible": false
            }
          ]
        },
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "event": "thump989:clam_open",
              "target": "self",
              "filters": {
                "test": "actor_health",
                "operator": ">=",
                "value": 100
              }
            }
          ]
        }
      },
      "self:open": {
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "event": "thump989:clam_close",
              "target": "self",
              "filters": {
                "test": "actor_health",
                "operator": "<=",
                "value": 75
              }
            }
          ]
        }
      }
    },
    "events": {
      "thump989:clam_open": {
        "remove": {
          "component_groups": ["self:close"]
        },
        "add": {
          "component_groups": ["self:open"]
        },
        "queue_command": {
          "command": ["effect @s clear regeneration"]
        },
        "set_property": {
          "thump989:giant_clam_closed": false
        }
      },
      "thump989:clam_close": {
        "remove": {
          "component_groups": ["self:open"]
        },
        "add": {
          "component_groups": ["self:close"]
        },
        "set_property": {
          "thump989:giant_clam_closed": true
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["self:open"]
        }
      }
    }
  }
}

            "wind_charged",
            "wither",
            "invisibility"
          ]
        }
      },
      "self:active": {
        "minecraft:type_family": {
          "family": ["mob", "player", "ordinance", "inamimate"]
        },
        "minecraft:health": {
          "value": 35,
          "max": 35
        },
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "on_damage": {
                "filters": [
                  {
                    "test": "is_family",
                    "value": "ordinance",
                    "subject": "damager"
                  }
                ]
              },
              "deals_damage": "no"
            },
            {
              "on_damage": {
                "event": "thump989:disable",
                "filters": [
                  {
                    "test": "has_damage",
                    "value": "fatal"
                  }
                ]
              },
              "deals_damage": "no"
            }
          ]
        },
        "minecraft:interact": {
          "interactions": [
            {
              "play_sounds": "deny",
              "spawn_items": {
                "table": "loot_tables/entity/cannon.json"
              },
              "on_interact": {
                "filters": [
                  {
                    "test": "has_equipment",
                    "subject": "other",
                    "value": "thump989:cannon_wrench",
                    "domain": "hand"
                  }
                ],
                "target": "self",
                "event": "thump989:interact"
              }
            }
          ]
        },
        "minecraft:spell_effects": {
          "add_effects": [
            {
              "effect": "instant_health",
              "amplifier": 250,
              "duration": 1,
              "visible": true

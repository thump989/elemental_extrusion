          "attack_interval": 0.6,
          "ranged_fov": 360,
          "y_max_head_rotation": 180,
          "attack_radius": 25,
          "swing": true,
          "priority": 0
        },
        "minecraft:behavior.nearest_attackable_target": {
          "scan_interval": 10,
          "priority": 2,
          "within_radius": 25,
          "must_see": true,
          "reselect_targets": true,
          "entity_types": [
            {
              "filters": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "monster"
                }
              ],
              "max_dist": 25
            }
          ]
        }
      },
      "self:transform": {
        "minecraft:transformation": {
          "drop_equipment": false,
          "drop_inventory": false,
          "into": "thump989:cannon",
          "keep_level": false,
          "keep_owner": true,
          "delay": 0,
          "preserve_equipment": true
        }
      },
      "self:transform_emerald": {
        "minecraft:transformation": {
          "drop_equipment": false,
          "drop_inventory": false,
          "into": "thump989:cannon<thump989:transform_emerald>",
          "keep_level": false,
          "keep_owner": true,
          "delay": 0,
          "preserve_equipment": true
        }
      },
      "self:instant_despawn": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      }
    },
    "events": {
      "thump989:tamed": {
        "add": {
          "component_groups": ["self:tamed"]
        }
      },
      "thump989:regen": {
        "set_property": {
          "thump989:cannon_regen": "q.property('thump989:cannon_regen')-1"
        }
      },
      "thump989:give_iron": {
        "set_property": {
          "thump989:cannon_regen": "q.property('thump989:cannon_regen')-15"
        }
      },
      "thump989:interact": {
        "add": {
          "component_groups": ["self:instant_despawn"]
        }
      },
      "thump989:activate": {
        "queue_command": {
          "command": ["effect @s clear regeneration"]
        },
        "remove": {
          "component_groups": ["self:disabled"]
        },
        "add": {
          "component_groups": ["self:active"]
        }
      },
      "thump989:disable": {
        "queue_command": {
          "command": [
            "particle minecraft:huge_explosion_emitter",
            "playsound random.explode @a ~ ~ ~"
          ]
        },
        "first_valid": [
          {
            "add": {
              "component_groups": ["self:transform"]
            },
            "filters": [
              {
                "test": "has_component",
                "value": "minecraft:tamed",
                "operator": "!="
              }
            ]
          },
          {
            "add": {
              "component_groups": ["self:transform_emerald"]
            }
          }
        ]
      },
      "thump989:transform_emerald": {
        "queue_command": {
          "command": [
            "particle minecraft:huge_explosion_emitter",
            "playsound random.explode @a ~ ~ ~"
          ]
        },
        "add": {
          "component_groups": ["self:disabled", "self_tamed"]
        }
      },
      "minecraft:entity_transformed": {
        "queue_command": {
          "command": [
            "particle minecraft:huge_explosion_emitter",
            "playsound random.explode @a ~ ~ ~"
          ]
        },
        "add": {
          "component_groups": ["self:disabled"]
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["self:active"]
        }
      },
      "thump989:death_event": {
        "queue_command": {
          "command": ["particle minecraft:huge_explosion_emitter"]
        }
      }
    }
  }
}

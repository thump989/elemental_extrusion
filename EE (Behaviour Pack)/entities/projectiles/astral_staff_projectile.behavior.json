{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "thump989:astral_staff_projectile",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },
    "components": {
      "minecraft:tameable": {
        "probability": 1
      },
      "minecraft:collision_box": {
        "height": 0,
        "width": 0
      },
      "minecraft:transient": {},
      "minecraft:cannot_be_attacked": {},
      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },
      "minecraft:projectile": {
        "ignored_entities": ["minecraft:player"],
        "on_hit": {
          "mob_effect": {
            "amplifier": 0,
            "effect": "weakness",
            "durationeasy": 200,
            "durationnormal": 200,
            "durationhard": 200
          },
          "impact_damage": {
            "damage": 10,
            "knockback": false,
            "destroy_on_hit": false
          },
          "definition_event": {
            "affect_projectile": true,
            "event_trigger": {
              "event": "thump989:explode",
              "target": "self"
            }
          },
          "stick_in_ground": {}
        },
        "power": 1.6,
        "gravity": 0.05,
        "anchor": 1,
        "should_bounce": false,
        "offset": [0, -0.1, 0]
      },
      "minecraft:pushable": {
        "is_pushable": false
      },
      "minecraft:push_through": {
        "value": 1
      }
    },
    "component_groups": {
      "self:instant_despawn": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      }
    },
    "events": {
      "thump989:explode": {
        "queue_command": {
          "command": [
            "damage @e[family=mob,r=1.9] 10 entity_explosion",
            "particle thump989:solarflare_explode",
            "playsound random.explode @a ~ ~ ~",
            "event entity @s thump989:instant_despawn"
          ]
        }
      },
      "thump989:instant_despawn": {
        "add": {
          "component_groups": ["self:instant_despawn"]
        }
      }
    }
  }
}

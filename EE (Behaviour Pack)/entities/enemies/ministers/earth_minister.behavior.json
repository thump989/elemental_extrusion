        "minecraft:behavior.ranged_attack": {
          "attack_interval": 3,
          "attack_radius": 30,
          "priority": 2,
          "burst_shots": 3,
          "burst_interval": 0.51
        }
      },
      "self:melee_phase_1": {
        "minecraft:attack": {
          "damage": 12,
          "effect_name": "mining_fatigue",
          "effect_duration": 60
        },
        "minecraft:behavior.melee_attack": {
          "melee_fov": 90,
          "priority": 2,
          "reach_multiplier": 1.5,
          "speed_multiplier": 1.25,
          "cooldown_time": 1
        }
      },
      "self:effect_aura": {
        "minecraft:mob_effect": {
          "mob_effect": "mining_fatigue",
          "cooldown_time": 1,
          "effect_range": 48,
          "effect_time": 15,
          "entity_filter": {
            "test": "is_family",
            "subject": "other",
            "value": "player"
          }
        }
      },
      "self:ranged_phase_2": {
        "minecraft:shooter": {
          "def": "thump989:earth_minister_projectile"
        },
        "minecraft:behavior.ranged_attack": {
          "attack_interval": 3,
          "attack_radius": 30,
          "priority": 2,
          "burst_shots": 6,
          "burst_interval": 0.51
        }
      },
      "self:melee_phase_2": {
        "minecraft:attack": {
          "damage": 14,
          "effect_name": "mining_fatigue",
          "effect_duration": 60
        },
        "minecraft:behavior.melee_attack": {
          "melee_fov": 90,
          "priority": 2,
          "on_attack": {
            "target": "self",
            "event": "thump989:spawn_blemish"
          },
          "reach_multiplier": 1.5,
          "speed_multiplier": 1.25,
          "cooldown_time": 1
        }
      },
      "self:phase_2": {
        "minecraft:timer": {
          "time": 120,
          "looping": true,
          "time_down_event": {
            "event": "thump989:burrow_ready",
            "target": "self"
          }
        },
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "event": "thump989:initiate_burrow",
              "target": "self",
              "filters": {
                "test": "bool_property",
                "value": true,
                "subject": "self",
                "domain": "thump989:is_burrowed"
              }
            }
          ]
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 4.0,
          "outside_range": 6.0,
          "must_see": true,
          "on_inside_range": {
            "event": "thump989:switch_to_melee_phase2",
            "target": "self"
          },
          "on_outside_range": {
            "event": "thump989:switch_to_ranged_phase2",
            "target": "self"
          }
        }
      },
      "self:burrowed": {
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "cause": "all",
              "deals_damage": "no"
            }
          ]
        },
        "minecraft:attack": {
          "damage": 1
        },
        "minecraft:behavior.melee_attack": {
          "reach_multiplier": 0,
          "speed_multiplier": 0.75,
          "priority": 2,
          "cooldown_time": 0
        },
        "minecraft:behavior.knockback_roar": {
          "attack_time": 2,
          "cooldown_time": 6,
          "duration": 3,
          "damage_filters": [
            {
              "any_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "irongolem"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "wolf"
                }
              ]
            }
          ],
          "knockback_filters": [
            {
              "any_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "irongolem"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "wolf"
                }
              ]
            }
          ],
          "knockback_height_cap": 0.4,
          "knockback_damage": 18,
          "on_roar_end": {
            "event": "thump989:spawn_blemish",
            "target": "self"
          },
          "knockback_horizontal_strength": 4,
          "knockback_range": 6,
          "knockback_vertical_strength": 4,
          "priority": 1
        },
        "minecraft:timer": {
          "time": 30,
          "looping": true,
          "time_down_event": {
            "event": "thump989:exit_burrow",
            "target": "self"
          }
        }
      }
    },
    "events": {
      "thump989:minister_die": {
        "queue_command": {
          "command": ["function earth_minister_die"]
        }
      },
      "thump989:burrow_ready": {
        "set_property": {
          "thump989:is_burrowed": true
        }
      },
      "thump989:switch_to_ranged_phase2": {
        "add": {
          "component_groups": ["self:ranged_phase_2"]
        },
        "remove": {
          "component_groups": ["self:melee_phase_2"]
        }
      },
      "thump989:switch_to_melee_phase2": {
        "add": {
          "component_groups": ["self:melee_phase_2"]
        },
        "remove": {
          "component_groups": ["self:ranged_phase_2"]
        }
      },
      "thump989:exit_burrow": {
        "set_property": {
          "thump989:is_burrowed": false
        },
        "remove": {
          "component_groups": ["self:burrowed"]
        },
        "add": {
          "component_groups": ["self:phase_2"]
        }
      },
      "thump989:initiate_burrow": {
        "remove": {
          "component_groups": [
            "self:ranged_phase_2",
            "self:melee_phase_2",
            "self:phase_2"
          ]
        },
        "add": {
          "component_groups": ["self:burrowed"]
        }
      },
      "thump989:phase_2_initiate": {
        "remove": {
          "component_groups": [
            "self:ranged_phase_1",
            "self:melee_phase_1",
            "self:phase_1"
          ]
        },
        "set_property": {
          "thump989:boss_phase": 2,
          "thump989:is_burrowed": true
        },
        "add": {
          "component_groups": ["self:phase_2", "self:effect_aura"]
        }
      },
      "thump989:switch_to_ranged_phase1": {
        "add": {
          "component_groups": ["self:ranged_phase_1"]
        },
        "remove": {
          "component_groups": ["self:melee_phase_1"]
        }
      },
      "thump989:switch_to_melee_phase1": {
        "add": {
          "component_groups": ["self:melee_phase_1"]
        },
        "remove": {
          "component_groups": ["self:ranged_phase_1"]
        }
      },
      "thump989:spawn_blemish": {
        "randomize": [
          {
            "queue_command": {
              "command": ["summon thump989:blemish ~ ~1 ~"]
            },
            "weight": 1
          },
          {
            "weight": 1
          }
        ]
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["self:phase_1"]
        }
      }
    }
  }
}

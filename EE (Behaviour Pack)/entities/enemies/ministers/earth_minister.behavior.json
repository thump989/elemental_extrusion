      },
      "minecraft:push_through": {
        "value": 0
      }
    },
    "component_groups": {
      "self:phase_1": {
        "minecraft:target_nearby_sensor": {
          "inside_range": 4.0,
          "outside_range": 6.0,
          "must_see": true,
          "on_inside_range": {
            "event": "thump989:switch_to_melee_phase1",
            "target": "self"
          },
          "on_outside_range": {
            "event": "thump989:switch_to_ranged_phase1",
            "target": "self"
          }
        }
      },
      "self:ranged_phase_1": {
        "minecraft:shooter": {
          "def": "thump989:earth_minister_projectile"

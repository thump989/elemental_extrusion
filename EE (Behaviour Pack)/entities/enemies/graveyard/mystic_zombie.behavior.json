{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "thump989:mystic_zombie",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:zombie",
      "properties": {
        "thump989:darkzombie_is_casting": {
          "client_sync": true,
          "default": false,
          "type": "bool"
        },
        "thump989:darkzombie_power": {
          "client_sync": true,
          "default": 0,
          "range": [0, 60],
          "type": "int"
        }
      },
      "animations": {
        "skull_cast": "animation.dark_zombie.evil_skull_cast"
      },
      "scripts": {
        "animate": [
          {
            "skull_cast": "q.property('thump989:darkzombie_is_casting')==true && q.has_target"
          }
        ]
      }
    },
    "components": {
      "minecraft:equipment": {
        "table": "loot_tables/spawn_equipment/faux_armour.json",
        "slot_drop_chance": [
          {
            "drop_chance": 0,
            "slot": "slot.armor.chest"
          }
        ]
      },
      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },
      "minecraft:type_family": {
        "family": ["mob", "monster", "undead"]
      },
      "minecraft:pushable": {
        "is_pushable": true
      },
      "minecraft:push_through": {
        "value": 0
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:movement.basic": {},
      "minecraft:jump.static": {},
      "minecraft:navigation.walk": {
        "avoid_water": true
      },
      "minecraft:behavior.nearest_attackable_target": {
        "scan_interval": 10,
        "must_reach": false,
        "must_see": true,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "wolf"
                },
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "irongolem"
                }
              ]
            }
          }
        ]
      },
      "minecraft:health": {
        "value": 45,
        "max": 45
      },
      "minecraft:nameable": {
        "allow_name_tag_renaming": true,
        "always_show": false
      },
      "minecraft:experience_reward": {
        "on_death": "q.last_hit_by_player ? 20 : 0"
      }
    },
    "component_groups": {
      "self:melee": {
        "minecraft:knockback_resistance": {
          "value": 0.2,
          "max": 0.2
        },
        "minecraft:movement": {
          "value": 0.25
        },
        "minecraft:attack": {
          "damage": 16,
          "effect_duration": 20,
          "effect_name": "trial_omen"
        },
        "minecraft:behavior.melee_box_attack": {
          "cooldown_time": 1
        },
        "minecraft:timer": {
          "time": 1,
          "looping": true,
          "time_down_event": {
            "event": "thump989:darkzombie_power_gain",
            "target": "self"
          }
        },
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "event": "thump989:darkzombie_start_cast",
              "target": "self",
              "filters": {
                "test": "int_property",
                "subject": "self",
                "domain": "thump989:darkzombie_power",
                "operator": ">=",
                "value": 60
              }
            }
          ]
        }
      },
      "self:casting": {
        "minecraft:knockback_resistance": {
          "value": 1,
          "max": 1
        },
        "minecraft:shooter": {
          "def": "thump989:evil_skull",
          "power": 1
        },
        "minecraft:behavior.ranged_attack": {
          "attack_radius": 25,
          "attack_interval": 4
        },
        "minecraft:movement": {
          "value": 0
        },
        "minecraft:timer": {
          "time": 1,
          "looping": true,
          "time_down_event": {
            "event": "thump989:darkzombie_power_lose",
            "target": "self"
          }
        },
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "event": "thump989:darkzombie_end_cast",
              "target": "self",
              "filters": {
                "test": "int_property",
                "subject": "self",
                "domain": "thump989:darkzombie_power",
                "operator": "<=",
                "value": 0
              }
            }
          ]
        }
      },
      "self:minion": {
        "minecraft:despawn": {
          "despawn_from_distance": {}
        },
        "minecraft:transient": {}
      }
    },
    "events": {
      "thump989:darkzombie_end_cast": {
        "remove": {
          "component_groups": ["self:casting"]
        },
        "add": {
          "component_groups": ["self:melee"]
        },
        "set_property": {
          "thump989:darkzombie_is_casting": false
        }
      },
      "thump989:darkzombie_start_cast": {
        "remove": {
          "component_groups": ["self:melee"]
        },
        "add": {
          "component_groups": ["self:casting"]
        },
        "set_property": {
          "thump989:darkzombie_is_casting": true
        }
      },
      "thump989:summon_minion": {
        "add": {
          "component_groups": ["self:melee", "self:minion"]
        },
        "set_property": {
          "thump989:darkzombie_power": "math.random(0, 60)"
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["self:melee"]
        },
        "set_property": {
          "thump989:darkzombie_power": "math.random(0, 60)"
        }
      },
      "thump989:darkzombie_power_gain": {
        "set_property": {
          "thump989:darkzombie_power": "q.property('thump989:darkzombie_power')+1"
        }
      },
      "thump989:darkzombie_power_lose": {
        "set_property": {
          "thump989:darkzombie_power": "q.property('thump989:darkzombie_power')-1"
        }
      }
    }
  }
}

{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "thump989:warning_shot",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },
    "components": {
      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },
      "minecraft:pushable": {
        "is_pushable": false
      },
      "minecraft:push_through": {
        "value": 1
      },
      "minecraft:transient": {},
      "minecraft:dimension_bound": {},
      "minecraft:projectile": {
        "gravity": 0,
        "inertia": 1,
        "liquid_inertia": 1,
        "multiple_targets": true,
        "on_hit": {
          "stick_in_ground": {}
        }
      },
      "minecraft:environment_sensor": {
        "triggers": [
          {
            "event": "thump989:despawn",
            "target": "self",
            "filters": {
              "test": "on_ground",
              "value": true
            }
          }
        ]
      }
    },
    "component_groups": {
      "self:transient": {
        "minecraft:transient": {}
      },
      "self:despawn_timer": {
        "minecraft:environment_sensor": {},
        "minecraft:timer": {
          "time": 1,
          "looping": true,
          "time_down_event": {
            "event": "thump989:instant_despawn",
            "target": "self"
          }
        }
      },
      "self:despawn": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["self:transient"]
        }
      },
      "thump989:instant_despawn": {
        "add": {
          "component_groups": ["self:despawn"]
        }
      },
      "thump989:despawn": {
        "add": {
          "component_groups": ["self:despawn_timer"]
        }
      }
    }
  }
}

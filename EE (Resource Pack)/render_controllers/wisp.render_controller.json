{
  "format_version": "1.10.0",
  "render_controllers": {
    "controller.render.wisp": {
      "arrays": {
        "textures": {
          "array.attack_variant": ["texture.default", "texture.mustasche"]
        }
      },
      "geometry": "Geometry.default",
      "textures": ["array.attack_variant[query.variant]"],
      "materials": [
        {
          "*": "Material.default"
        }
      ]
    },
    "controller.render.fire_wisp": {
      "geometry": "Geometry.wisp_fire",
      "textures": ["Texture.wisp_fire"],
      "ignore_lighting": true,
      "materials": [
        {
          "*": "Material.glowlayer"
        }
      ],
      "uv_anim": {
        "scale": [1, "1 / 31"],
        "offset": [0, "Math.mod(Math.floor(query.life_time * 20), 31) / 31"]
      }
    }
  }
}

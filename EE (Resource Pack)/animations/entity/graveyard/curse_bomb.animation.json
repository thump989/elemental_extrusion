{
	"format_version": "1.8.0",
	"animations": {
		"animation.curse_bomb.idle": {
			"loop": true,
			"bones": {
				"outside": {
					"rotation": ["q.anim_time*90", "-q.anim_time*90", "q.anim_time*90"]
				},
				"outside2": {
					"rotation": ["-q.anim_time*90", "q.anim_time*90", "-q.anim_time*90"]
				}
			}
		},
		"animation.curse_bomb.explode": {
			"loop": true,
			"bones": {
				"root": {
					"scale": "1+math.abs(math.sin((q.anim_time*q.anim_time)*120))"
				}
			}
		},
		"animation.curse_bomb.spawn": {
			"loop": "hold_on_last_frame",
			"animation_length": 0.125,
			"bones": {
				"root": {
					"scale": {
						"0.0": [0, 0, 0],
						"0.125": [1, 1, 1]
					}
				}
			}
		}
	}
}
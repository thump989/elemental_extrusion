{
  "format_version": "1.19.0",
  "animation_controllers": {
    "controller.animation.fire_minisiter.particle": {
      "states": {
        "default": {
          "transitions": [
            { "particle": "q.property('thump989:boss_phase')==2" }
          ]
        },
        "particle": {
          "particle_effects": [
            {
              "effect": "fire_minister_phase2_aura"
            }
          ]
        }
      }
    },
    "controller.animation.fire_minisiter.cast": {
      "states": {
        "default": {
          "transitions": [{ "conjure": "q.is_casting" }],
          "blend_transition": 1
        },
        "conjure": {
          "animations": ["conjure"],
          "particle_effects": [
            {
              "effect": "fireminister_summon"
            }
          ],
          "transitions": [{ "default": "!q.is_casting" }],
          "blend_transition": 1
        }
      }
    }
  }
}

{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.phantore_phase_2.melee_controller": {
			"states": {
				"default": {
					"transitions": [
						{"melee_attack_idle": "v.attack_time>0 && q.property('thump989:phantore_attack_state')=='melee' && variable.bite_random == 1"},
						{"ranged_shot": "q.property('thump989:phantore_attack_state')=='homing'"},
						{"roar": "q.is_roaring"}
					]
				},
				"melee_attack_idle": {
					"animations": ["weapons_idle"],
					"transitions": [
						{"default": "q.property('thump989:phantore_attack_state')=='none'"},
						{"melee_attack_1": "v.attack_time>0 && variable.bite_random == 1"},
						{"melee_attack_2": "v.attack_time>0 && variable.bite_random == 2"},
						{"melee_attack_3": "v.attack_time>0 && variable.bite_random == 3"}
					]
				},
				"melee_attack_1": {
					"animations": ["attack_1", "weapons_attack"],
					"transitions": [
						{"default": "q.all_animations_finished"}
					]
				},
				"melee_attack_2": {
					"animations": ["attack_2", "weapons_attack"],
					"transitions": [
						{"default": "q.all_animations_finished"}
					]
				},
				"melee_attack_3": {
					"animations": ["attack_3", "weapons_attack"],
					"transitions": [
						{"default": "q.all_animations_finished"}
					]
				},
				"ranged_shot": {
					"animations": ["shoot"],
					"transitions": [
						{"default": "q.property('thump989:phantore_attack_state')=='none'"}
					]
				},
				"roar": {
					"animations": ["roar"],
					"transitions": [
						{"default": "!q.is_roaring"}
					]
				}
			}
		},
		"controller.animation.phantore_phase_2.root_controller": {
			"states": {
				"default": {
					"animations": ["melee_controller"],
					"transitions": [
						{"casting": "q.is_casting && q.property('thump989:phantore_attack_state')=='summon'"},
						{"skullshot": "q.property('thump989:phantore_attack_state')=='skullshot' || q.property('thump989:phantore_attack_state')=='skullshot_2'"},
						{"xp_blast": "q.property('thump989:phantore_attack_state')=='xp_timer'"},
						{"shadowfire": "q.property('thump989:phantore_attack_state')=='shadowfire' && q.is_casting"},
						{"deafeat": "q.health==1"}
					]
				},
				"casting": {
					"animations": ["cast_controller"],
					"particle_effects": [
						{
							"effect": "spell",
							"locator": "right_hand"
						},
						{
							"effect": "spell",
							"locator": "left_hand"
						}
					],
					"transitions": [
						{"default": "!q.is_casting"},
						{"deafeat": "q.health==1"}
					]
				},
				"skullshot": {
					"animations": ["skull_shoot"],
					"transitions": [
						{"default": "q.all_animations_finished"},
						{"deafeat": "q.health==1"}
					]
				},
				"xp_blast": {
					"animations": ["xp_blast"],
					"transitions": [
						{"xp_recover": "!q.property('thump989:phantore_attack_state')=='xp_bomb' || q.property('thump989:phantore_attack_state')=='recover'"},
						{"deafeat": "q.health==1"}
					]
				},
				"xp_recover": {
					"animations": ["xp_blast_recover"],
					"transitions": [
						{"default": "q.all_animations_finished"},
						{"deafeat": "q.health==1"}
					]
				},
				"shadowfire": {
					"animations": ["shadowfire_cast"],
					"particle_effects": [
						{
							"effect": "spell",
							"locator": "right_hand"
						}
					],
					"transitions": [
						{"default": "!q.is_casting || q.property('thump989:phantore_attack_state')=='none'"},
						{"deafeat": "q.health==1"}
					]
				},
				"deafeat": {
					"animations": ["deafeat"],
					"transitions": [
						{"defeat_loop": "q.all_animations_finished"}
					]
				},
				"defeat_loop": {
					"animations": ["deafeat_loop"]
				}
			}
		},
		"controller.animation.phantore_phase_2.cast_controller": {
			"states": {
				"default": {
					"transitions": [
						{"cast_start": "q.is_casting"}
					]
				},
				"cast_start": {
					"animations": ["summon_cast"],
					"transitions": [
						{"cast_loop": "q.all_animations_finished"}
					]
				},
				"cast_loop": {
					"animations": ["summon_cast_loop"],
					"transitions": [
						{"default": "!q.is_casting"}
					],
					"blend_transition": 0.2,
					"blend_via_shortest_path": true
				}
			}
		}
	}
}
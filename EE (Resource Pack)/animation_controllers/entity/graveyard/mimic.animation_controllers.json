{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.mimic.root_controller": {
			"states": {
				"default": {
					"transitions": [
						{"activate": "q.property('thump989:mimic_active')==1"},
						{"active": "q.property('thump989:mimic_active')==2"}
					]
				},
				"activate": {
					"animations": ["activate"],
					"transitions": [
						{"active": "q.all_animations_finished"}
					]
				},
				"active": {
					"animations": ["attack_controller", "move_controller"]
				}
			}
		},
		"controller.animation.mimic.attack_controller": {
			"states": {
				"default": {
					"animations": ["idle"],
					"transitions": [
						{"attack": "v.attack_time>0"}
					]
				},
				"attack": {
					"animations": ["attack"],
					"transitions": [
						{"default": "q.all_animations_finished"}
					]
				}
			}
		},
		"controller.animation.mimic.move_controller": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"transitions": [
						{"walking": "q.ground_speed > 1.0"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": ["move"],
					"transitions": [
						{"idle": "q.ground_speed < 0.5"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}
{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.nautilus.move": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"transitions": [
						{"walking": "q.ground_speed > 1.0"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": ["swim"],
					"transitions": [
						{"idle": "q.ground_speed < 0.5"}
					],
					"blend_transition": 0.2
				}
			}
		},
		"controller.animation.nautilus.hiding_controller": {
			"states": {
				"default": {
					"animations": ["body_idle"],
					"transitions": [
						{"retract": "q.property('thump989:nautilus')=='hiding'"}
					]
				},
				"retract": {
					"animations": ["retract"],
					"transitions": [
						{"hold": "q.all_animations_finished"}
					]
				},
				"hold": {
					"animations": ["retract_hold"],
					"transitions": [
						{"unretract": "q.property('thump989:nautilus')=='none'"}
					]
				},
				"unretract": {
					"animations": ["unretract"],
					"transitions": [
						{"default": "q.all_animations_finished"}
					],
					"blend_transition": 0.025,
					"blend_via_shortest_path": true
				}
			}
		}
	}
}
{
  "format_version": "1.19.0",
  "animation_controllers": {
    "controller.animation.clam.root_controller": {
      "states": {
        "default": {
          "animations": ["idle"],
          "transitions": [{ "swim": "q.modified_move_speed>0.025" }],
          "blend_transition": 0.4,
          "blend_via_shortest_path": true
        },
        "swim": {
          "animations": ["swim"],
          "transitions": [{ "default": "q.modified_move_speed<=0.026" }],
          "blend_transition": 0.4,
          "blend_via_shortest_path": true
        }
      }
    }
  }
}
